<UserControl x:Class="UtilityWpf.DemoApp.View.TransitionControlUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UtilityWpf.DemoApp.View"
             xmlns:view="clr-namespace:UtilityWpf.View;assembly=UtilityWpf.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UniformGrid Columns="1">
        <view:TransitionControl></view:TransitionControl>
        <view:TransitionControl>
            <view:TransitionControl.CheckedButtonContent>
                <Rectangle Fill="Khaki" Height="40" Width="60"></Rectangle>
            </view:TransitionControl.CheckedButtonContent>
            <view:TransitionControl.CheckedContent>
                <Rectangle Fill="Brown" Height="40" Width="60"></Rectangle>
            </view:TransitionControl.CheckedContent>
        </view:TransitionControl>
    </UniformGrid>
</UserControl>
