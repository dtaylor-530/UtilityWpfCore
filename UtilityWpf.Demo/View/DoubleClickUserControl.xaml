<UserControl
    x:Class="UtilityWpf.DemoApp.DoubleClickUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:UtilityWpf.DemoApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:util="clr-namespace:UtilityWpf.Attached;assembly=UtilityWpf">
    <UserControl.Resources>

        <DataTemplate DataType="{x:Type local:Character}">
            <StackPanel Margin="5" Orientation="Vertical">
                <TextBlock
                    FontWeight="Bold"
                    Text="{Binding First}"
                    TextAlignment="Center" />
                <Image Margin="0,5,0,0" Source="{Binding Image}" />
            </StackPanel>
        </DataTemplate>
    </UserControl.Resources>
    <Grid>

        <ListBox ItemsSource="{Binding Characters}">
            <ListBox.ItemContainerStyle>
                <Style>
                    <Setter Property="util:MouseDoubleClick.Command" Value="{Binding DataContext.MyCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}}" />
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>
    </Grid>
</UserControl>