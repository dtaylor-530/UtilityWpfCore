<UserControl x:Class="UtilityWpf.DemoApp.View.DateTimeUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:view="clr-namespace:UtilityWpf.View;assembly=UtilityWpf.View" 
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <ToolBar DockPanel.Dock="Top">
            <view:DateTimeControl x:Name="DateTimeControl1"></view:DateTimeControl>
        </ToolBar>

        <lvc:CartesianChart DataTooltip="{x:Null}">
            <lvc:CartesianChart.Series>
                <lvc:ScatterSeries Title="Open" x:Name="ScatterSeries" />
                <lvc:ScatterSeries Title="Close" x:Name="ScatterSeries2" />
            </lvc:CartesianChart.Series>
            <lvc:CartesianChart.AxisX>
                <lvc:Axis x:Name="DateAxis"/>

            </lvc:CartesianChart.AxisX>
        </lvc:CartesianChart>
    </DockPanel>
</UserControl>
