<UserControl
    x:Class="UtilityWpf.DemoApp.View.UniformStackPanelUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:UtilityWpf.DemoApp.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:view="clr-namespace:UtilityWpf.View;assembly=UtilityWpf.View"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>

        <view:UniformStackPanel Width="130" Height="400">

            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="20"
                FontWeight="Bold"
                Text=" Salary" />

            <TextBlock
                Margin="10"
                HorizontalAlignment="Center"
                FontSize="25"
                FontWeight="Bold"
                Text="Name" />
            <TextBlock
                HorizontalAlignment="Center"
                FontSize="15"
                Foreground="Gray"
                Text="Occupation" />
        </view:UniformStackPanel>
    </Grid>
</UserControl>