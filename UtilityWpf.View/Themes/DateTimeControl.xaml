<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:util="clr-namespace:UtilityWpf.Converter;assembly=UtilityWpf"
                    xmlns:local="clr-namespace:UtilityWpf.View"
                  >
    <util:DateTimeToStringConverter x:Key="DateTimeConverter"></util:DateTimeToStringConverter>
    
    <Style TargetType="{x:Type local:DateTimeControl}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:DateTimeControl}">
                    <StackPanel Orientation="Horizontal" DataContext="{Binding RelativeSource={RelativeSource TemplatedParent}}">
                        <DatePicker  x:Name="dp1"  Width="200"  VerticalAlignment="Center"      Text="{Binding Start,Mode=TwoWay,Converter={StaticResource DateTimeConverter}}"  />
                        <DatePicker  x:Name="dp2"  Width="200"  VerticalAlignment="Center"     Text="{Binding End,Mode=TwoWay,Converter={StaticResource DateTimeConverter}}"   />
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>