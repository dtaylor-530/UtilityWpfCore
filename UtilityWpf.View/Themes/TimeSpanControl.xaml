<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:view="clr-namespace:UtilityWpf.View" xmlns:extrinsic="clr-namespace:UtilityWpf.View.Extrinsic">


    <Style  TargetType="{x:Type view:TimeSpanControl}">

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type view:TimeSpanControl}">

                    <UniformGrid Rows="1">
                        <extrinsic:SpinnerControl x:Name="IntervalValueSpinner"  Margin="1" Maximum="1000000000000">

                        </extrinsic:SpinnerControl>
                        <ComboBox x:Name="TimeIntervalUnitComboBox"  Margin="1">

                        </ComboBox>
                    </UniformGrid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>