  <ItemGroup>
    <ProjectReference Include="..\UtilityWpf.Animation\UtilityWpf.Animation.csproj" />
    <ProjectReference Include="..\UtilityWpf.View\UtilityWpf.View.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="MainWindow.xaml.cs">
