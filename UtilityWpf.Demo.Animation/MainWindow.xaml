<Window
    x:Class="UtilityWpf.DemoAnimation.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ani="clr-namespace:UtilityWpf.Animation;assembly=UtilityWpf.Animation"
    xmlns:controlx="urn:controlzex"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:UtilityWpf.DemoAnimation"
    xmlns:local1="clr-namespace:UtilityWpf.DemoAnimationCore"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:nb="http://www.aptof.com/"
    Title="MainWindow"
    Width="800"
    Height="650"
    mc:Ignorable="d">

    <Grid>
        <controlx:TabControlEx>

            <TabItem Header="Gauge">
                <local:Gauge2UserControl />
            </TabItem>
            <TabItem Header="Points Animation">
                <DockPanel>

                    <local:PointAnimationUserControl />
                </DockPanel>
            </TabItem>
            <TabItem Header="Notification Alert">
                <local:NotificationUserControl />
            </TabItem>
            <TabItem Header="BarControl">
                <DockPanel>
                    <StackPanel DockPanel.Dock="Top">
                        <nb:NumberBox
                            x:Name="height"
                            Width="100"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Number="60" />
                        <nb:NumberBox
                            x:Name="duration"
                            Width="100"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Number="600" />
                    </StackPanel>
                    <Grid>
                        <ani:BarControl Size="{Binding ElementName=height1, Path=Number}" Duration="{Binding ElementName=duration, Path=Number}" />
                    </Grid>
                </DockPanel>
            </TabItem>
            <TabItem Header="BlinkControl">
                <DockPanel>
                    <StackPanel DockPanel.Dock="Top">
                        <nb:NumberBox
                            x:Name="duration1"
                            Width="100"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Number="600" />
                    </StackPanel>
                    <Grid Width="40" Height="40">
                        <ani:BlinkControl Duration="{Binding ElementName=duration1, Path=Number}" />
                    </Grid>
                </DockPanel>
            </TabItem>

            <TabItem Header="BeatControl">
                <DockPanel>
                    <DockPanel.DataContext>
                        <local:BeatViewModel />
                    </DockPanel.DataContext>
                    <StackPanel DockPanel.Dock="Top">
                        <nb:NumberBox
                            Width="100"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Number="{Binding Rate}" />
                    </StackPanel>
                    <Grid>
                        <ani:BeatControl Beat="{Binding Beat}" />
                    </Grid>
                </DockPanel>
            </TabItem>

            <TabItem Header="FadeControl">
                <DockPanel>

                    <Label>Click Control or Button To Animate</Label>
                    <Button
                        Width="200"
                        Height="40"
                        Margin="10"
                        Command="{Binding ElementName=Fade1, Path=FadeCommand}"
                        DockPanel.Dock="Top">
                        Click
                    </Button>
                    <Grid Width="100" Height="100">
                        <ani:FadeControl x:Name="Fade2" FadeIn="False" />
                    </Grid>
                    <Grid Width="100" Height="100">
                        <ani:FadeControl x:Name="Fade1">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="MouseDown">
                                    <i:InvokeCommandAction Command="{Binding FadeCommand, RelativeSource={RelativeSource AncestorType=ani:FadeControl}}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </ani:FadeControl>
                    </Grid>
                </DockPanel>
            </TabItem>
            <TabItem Header="Border">
                <local1:BorderUserControl />
            </TabItem>
            <TabItem Header="TransitionElement">
                <local:TransitionElementUserControl />
            </TabItem>
        </controlx:TabControlEx>
    </Grid>
</Window>