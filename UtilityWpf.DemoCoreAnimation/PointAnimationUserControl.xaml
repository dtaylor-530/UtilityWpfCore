<UserControl x:Class="UtilityWpf.DemoAnimation.PointAnimationUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:animation="clr-namespace:UtilityWpf.Animation;assembly=UtilityWpf.AnimationCore"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <Button Click="Button_Click">Animate</Button>
        <Grid Height="300" Width="600">
            <Canvas x:Name="Canvas1" Background="AliceBlue">
                
            </Canvas>
        </Grid>
        <Grid Height="300" Width="600">
            <Canvas  Background="AliceBlue">
                <animation:PointControl x:Name="PointControl1">
                    <animation:PointControl.Point>
                        <Point X="100" Y="100"></Point>
                    </animation:PointControl.Point>
                </animation:PointControl>
            </Canvas>
        </Grid>

    </StackPanel>
</UserControl>
