<UserControl x:Class="UtilityWpf.DemoAppCore.View.ObjectUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UtilityWpf.DemoApp"
             xmlns:sys="clr-namespace:System;assembly=System.Runtime"
             xmlns:view="clr-namespace:UtilityWpf.View;assembly=UtilityWpf.ViewCore"
                mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <sys:Exception x:Key="exception" ></sys:Exception>
    </UserControl.Resources>
    <DockPanel Name="DockPanel" Visibility="Visible">
        <StackPanel DockPanel.Dock="Top">

            <Label Content="double-click a value to copy to clipboard" Margin="5" FontWeight="DemiBold"></Label>
            <Label Content="Hover over items to view tool-tip" Margin="5" FontWeight="DemiBold"></Label>

        </StackPanel>
        <Grid>
            <UniformGrid >
                <view:JsonView Object="{StaticResource Characters}"></view:JsonView>
                <view:JsonView Object="{StaticResource exception}"></view:JsonView>
                <view:ObjectView Object="{StaticResource exception}"></view:ObjectView>
                <Grid>
                    <Grid.Resources>
                        <!--DataTemplate for Published Date column defined in Grid.Resources.  PublishDate is a property on the ItemsSource of type DateTime -->
                        <DataTemplate x:Key="DateTemplate" >
                            <view:JsonView Object="{Binding }"></view:JsonView>
                        </DataTemplate>
                        <!--DataTemplate for the Published Date column when in edit mode. -->
                        <DataTemplate x:Key="EditingDateTemplate">
                            <DatePicker  />
                        </DataTemplate>
                    </Grid.Resources>
                    <DataGrid  ItemsSource="{StaticResource Characters}" AutoGenerateColumns="False" >
                        <DataGrid.Columns>
                            <!--Custom column that shows the published date-->
                            <DataGridTemplateColumn Header="Publish Date" CellTemplate="{StaticResource DateTemplate}" CellEditingTemplate="{StaticResource EditingDateTemplate}" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
                <!--<ScrollViewer VerticalScrollBarVisibility="Auto">
                    <forge:DynamicForm Model="{x:Static local:Login.Instance}" Margin="16" />
                    </ScrollViewer>-->

                <!--<ScrollViewer VerticalScrollBarVisibility="Auto">
                    <forge:DynamicForm Model="{StaticResource Bart}" Margin="16" />
                </ScrollViewer>-->
            </UniformGrid>
        </Grid>
    </DockPanel>
</UserControl>
