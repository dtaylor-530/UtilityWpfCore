<UserControl x:Class="UtilityWpf.DemoAppCore.View.MasterDetailViewUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:view="clr-namespace:UtilityWpf.View;assembly=UtilityWpf.ViewCore"
             mc:Ignorable="d" 
                DataContext="{DynamicResource Characters}"
             d:DesignHeight="450" d:DesignWidth="1200">
    <UniformGrid Columns="1">
        <UniformGrid.Resources>
            <PropertyGroupDescription x:Key="First" PropertyName="Last"></PropertyGroupDescription>
        </UniformGrid.Resources>
        <view:MasterDetailView Items="{Binding }" Id="First" PropertyGroupDescription="{StaticResource First}"></view:MasterDetailView>
        <view:MasterDetailCheckView Items="{Binding }" Id="First">
            <ItemsControl></ItemsControl>
        </view:MasterDetailCheckView>
    </UniformGrid>
</UserControl>
