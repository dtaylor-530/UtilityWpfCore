<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:pt="http://propertytools.org/wpf"
                    xmlns:Json="clr-namespace:UtilityWpf.View.Json">

    <ResourceDictionary.MergedDictionaries>

        <!--<ResourceDictionary  Source="/UtilityWpf.ViewCore;component/DataTemplate/PropertyDataTemplateSelector.xaml" />-->
    </ResourceDictionary.MergedDictionaries>

    <DataTemplate  x:Key="KeyValuePairTemplate">

        <Grid Margin="2"  MinHeight="50">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="3*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBlock FontWeight = "Bold"    TextAlignment="Left" Text="{Binding Path=Key}" />
            <ContentPresenter Grid.Column="1" HorizontalAlignment="Center"  Margin = "1" Content="{Binding Path=Value}">
                <ContentPresenter.ContentTemplate>
                    <DataTemplate>
                        <Json:JsonView  Object="{Binding }" />
                    </DataTemplate>
                </ContentPresenter.ContentTemplate>
            </ContentPresenter>
        </Grid>
    </DataTemplate>
</ResourceDictionary>