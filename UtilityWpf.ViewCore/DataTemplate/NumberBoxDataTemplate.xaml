<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"

xmlns:viewmodel="clr-namespace:UtilityWpf.ViewModel"
                   xmlns:pt="http://propertytools.org/wpf">

    <DataTemplate DataType="{x:Type viewmodel:NumberBoxViewModel}">
        <StackPanel Orientation="Horizontal">
            <Label Content="{Binding Title}"></Label>
            <pt:SpinControl Value="{Binding Output}"  Height="20"  Width="60" Margin="5" Minimum="{Binding Minimum}" Maximum="{Binding Maximum}" SmallChange="1" LargeChange="10">
                <TextBox Text="{Binding Output}" BorderThickness="0" HorizontalContentAlignment="Center" />
            </pt:SpinControl>
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>